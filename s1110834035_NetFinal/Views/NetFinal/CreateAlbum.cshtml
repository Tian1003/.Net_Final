@model s1110834035_NetFinal.Models.Albums
@{
    ViewData["Title"] = "Create Album";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>新增相簿</h2>

@using (Html.BeginForm("CreateAlbum", "NetFinal", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <label for="AlbumName" class="control-label col-sm-2">相簿名稱</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.AlbumName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AlbumName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="Description" class="control-label col-sm-2">產品名稱</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>


        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" value="新增相簿" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("返回", "photograph", "NetFinal", new { }, new { @class = "btn btn-secondary" })
</div>
